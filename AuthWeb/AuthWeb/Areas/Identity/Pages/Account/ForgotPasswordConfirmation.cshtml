@page
@model ForgotPasswordConfirmation
<form id="ValidateUser" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Security Questions</h2>
            <hr />
        </div>
        <div class="mb-3">
            <p> </p>
        </div>
        <div class="mb-3">
            <label>Question 1:@ViewData["SecurityQuestion1"]</label>
            <input  type="text" class="form-control" autocomplete="off" />
            <span  class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Question 2:@ViewData["SecurityQuestion2"]</label>
            <input  type="text" class="form-control" autocomplete="off" />
            <span  class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Question 3:@ViewData["SecurityQuestion3"]</label>
            <input  type="text" class="form-control" autocomplete="off" />
            <span  class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Reset Password</button>
    </div>
</form>