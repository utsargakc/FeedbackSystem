
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<form id="registerForm" method="post">
<div class="row">
    
    <div id="1" class="col-md-6">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input  class="form-control" autocomplete="username" aria-required="true" placeholder="name" />
                <label >Name</label>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label>Email</label>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label>Password</label>
                <span class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label>Confirm Password</label>
                <span class="text-danger"></span>
            </div>
    </div>
    <div id="2" class="border col-md-6 p-3 mb-3">
            <h4>Security Questions for password recovery</h4>
            <hr />
            <div class="mb-3">
                <label>Security Question 1</label>
                <input class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Security Answer 1</label>
                <input class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Security Question 2</label>
                <input class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Security Answer 2</label>
                <input class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Security Question 3</label>
                <input  class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Security Answer 3</label>
                <input class="form-control" aria-required="true" required/>
                <span class="text-danger"></span>
            </div>
    </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
    
</div>
</form>